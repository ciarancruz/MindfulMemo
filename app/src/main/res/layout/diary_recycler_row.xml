<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/earthy_green"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="144dp">

            <ImageButton
                android:id="@+id/diary_option"
                android:layout_width="67dp"
                android:layout_height="63dp"
                android:backgroundTint="#7A9364"
                android:contentDescription="@string/more_options"
                android:scaleType="fitCenter"
                android:src="@drawable/blackdots"
                android:onClick="showPopupOption"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/blackdots" />

            <ImageButton
                android:id="@+id/heart_btn"
                android:layout_width="68dp"
                android:layout_height="59dp"
                android:backgroundTint="#7A9464"
                android:contentDescription="@string/like_diary"
                android:scaleType="fitCenter"
                android:src="@drawable/heart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/heart" />

            <TextView
                android:id="@+id/diary_title"
                android:layout_width="67dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/title_diary"
                android:text="Title"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/line_divider"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/line_divider"
                android:layout_width="182dp"
                android:layout_height="166dp"
                android:layout_marginStart="36dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/line2" />

            <TextView
                android:id="@+id/date_entry"
                android:layout_width="127dp"
                android:layout_height="106dp"
                android:layout_marginEnd="84dp"
                android:layout_marginBottom="28dp"
                android:contentDescription="@string/date_diary"
                android:text="       10                          Feb 2024               Tuesday            19:00  PM   "
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/line_divider"
                app:layout_constraintEnd_toEndOf="@+id/line_divider" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>