<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actvivity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.example.mymemo.MainActivity"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="-184dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="53dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/greetingText"
        android:layout_width="220dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="343dp"
        android:text="@string/welcome"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="278dp"
        android:layout_height="122dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="491dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="118dp"
        android:fontFamily="@font/grape_nut_font"
        android:text="@string/this_is_your_life_your_diary_start_journaling_today_and_capture_all_the_little_moment_in_your_life"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/login"
        android:layout_width="119dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="405dp"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="252dp"
        android:background="@drawable/btn_bg"
        android:text="@string/login"
        android:textColor="#000000" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="116dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="226dp"
        android:layout_marginTop="405dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="253dp"
        android:background="@drawable/btn_bg"
        android:text="Register" />


</RelativeLayout>